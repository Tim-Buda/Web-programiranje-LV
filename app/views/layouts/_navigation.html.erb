<header id="header" class="">
    <h1>Apartmani Ann</h1>
    <nav>
    <ul>
        <li><%= link_to "Početna", root_path %></li>
        <li><%= link_to "Apartmani", apartments_path %></li>
        <li><%= link_to "Lokacija", location_path %></li>
        <li><%= link_to "Kontakti", contacts_path %></li>
        <li><%= link_to "Rezervacija", reservations_path if current_user%></li>
